@model  List<RentAcar.Models.Akategori>
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div style="position:fixed; top:0px; left:0px; width:100%; height:70px; padding:4px; background:rgba(0,0,0,0.5); z-index:9999999">
        <div class="row">
            <div class="col-md-4" style="color:white">
                <h3>Araç Kiralama</h3>
            </div>
            <div class="col-md-4" style="color:white">

            </div>
            <div align="right" class="col-md-4" style="color:white;padding-top:15px">
                <div class="col-md-3">
                    <a style="color:white" href="/Sayfa/Index"> Ana Sayfa</a>
                </div>
                <div class="col-md-3">
                    Hakkımızda
                </div>
                <div class="col-md-3" onmouseover="document.getElementById('katsecenek').style.display = 'block';">
                    Kategoriler
                    <div align="left" id="katsecenek" class="form-control" style="display:none; width:150px; height:auto; padding:5px">
                        @foreach(var item in Model)
                        {
                            <p>@item.aKat</p>
                            <hr />
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    İletişim
                </div>

            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
</body>
</html>
